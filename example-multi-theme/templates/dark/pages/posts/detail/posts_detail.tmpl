{{ define "header"}}<title>{{ .title }} - {{ .constant.siteName }}</title>{{ end }}
{{define "content"}}
<article style="background: #1e1e1e; padding: 2rem; border-radius: 8px; box-shadow: 0 4px 8px rgba(0,0,0,0.3); border: 1px solid #333;">
    <h1 style="color: #bb86fc; margin-bottom: 1rem;">{{ .title }}</h1>
    <div style="color: #b0b0b0; margin-bottom: 1.5rem; padding-bottom: 1rem; border-bottom: 1px solid #333;">
        <span>作者: {{ .author }}</span> | 
        <span>发布时间: {{ formatDate .createdAt }}</span>
    </div>
    <div style="line-height: 1.8; color: #e0e0e0;">
        {{ .content }}
    </div>
</article>
<div style="margin-top: 2rem; padding: 1rem; background: #1e1e1e; border-radius: 8px; border-left: 4px solid #bb86fc;">
    <p style="color: #e0e0e0;"><strong style="color: #bb86fc;">主题说明:</strong> 深色主题的文章详情页，使用深色背景减少眼部疲劳。</p>
</div>
<div style="margin-top: 1rem;">
    <a href="/posts" style="color: #bb86fc; text-decoration: none;">&larr; 返回文章列表</a>
</div>
{{end}}

{{ define "script" }}
<script>
// 文章详情页面的JavaScript功能 - 深色主题
document.addEventListener('DOMContentLoaded', function() {
    console.log('文章详情页面已加载完成 - 深色主题');
});
</script>
{{ end }}